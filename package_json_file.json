{
  "name": "fightclub-community",
  "version": "1.0.0",
  "description": "🥊 파이트클럽 커뮤니티 - 완전한 기능을 갖춘 현대적 커뮤니티 플랫폼",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "npm run build:frontend && npm run optimize",
    "build:frontend": "mkdir -p public && cp frontend/*.html public/ || cp *.html public/ 2>/dev/null || true",
    "optimize": "node scripts/optimize.js",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seedData.js",
    "backup": "node scripts/backup.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t fightclub-community .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy": "npm run build && pm2 start ecosystem.config.js",
    "logs": "pm2 logs fightclub-community",
    "monitor": "pm2 monit",
    "restart": "pm2 restart fightclub-community",
    "stop": "pm2 stop fightclub-community",
    "ssl:generate": "node scripts/generateSSL.js",
    "cleanup": "node scripts/cleanup.js"
  },
  "keywords": [
    "community",
    "forum",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "react",
    "real-time",
    "responsive",
    "korean",
    "fightclub"
  ],
  "author": "FightClub Community Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fightclub-community.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/fightclub-community/issues"
  },
  "homepage": "https://github.com/your-username/fightclub-community#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}